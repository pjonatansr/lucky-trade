{
    "env": {
        "node": true,
        "es2020": true,
        "jest": true
    },
    "extends": [
        "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
        "react/jsx-filename-extension": "off",
        "@typescript-eslint/lines-between-class-members": "off"
    },
    "settings": {
        "import/resolver": {
          "typescript": {}
        }
    }
}
